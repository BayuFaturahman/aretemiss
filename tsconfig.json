{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./app/components/*"],
      "@components": ["./app/components"],
      "@config/*": ["./app/config/*"],
      "@config": ["./app/config"],
      "@models/*": ["./app/models/*"],
      "@models": ["./app/models"],
      "@navigators/*": ["./app/navigators/*"],
      "@navigators": ["./app/navigators"],
      "@screens/*": ["./app/screens/*"],
      "@screens": ["./app/screens"],
      "@services/*": ["./app/services/*"],
      "@services": ["./app/services"],
      "@theme/*": ["./app/theme/*"],
      "@theme": ["./app/theme"],
      "@styles/*": ["./app/styles/*"],
      "@styles": ["./app/styles"],
      "@utils/*": ["./app/utils/*"],
      "@utils": ["./app/utils"],
      "@assets/*": ["./assets/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
